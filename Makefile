LIB = ar rcs
RM = rm -f

CC = cc

RED    = \033[31m
GREEN  = \033[32m
YELLOW = \033[33m
BLUE   = \033[34m
RESET  = \033[0m

CCFLAGS = -Wall -Wextra -Werror -g3

SRC_DIR = src

SRC = pushswap.c\
	pushswap_op1.c\
	pushswap_op2.c\
	pushswap_op3.c\
	pushswap_utils.c\
	pushswap_utils2.c\
	pushswapmoves.c\
	pushswapinput.c\
	pushswapprices.c\
	intoverunderflow.c\

OBJ = $(SRC:.c=.o)

INCLUDE = pushswap.h

NAME = push_swap

LIBFTA = libft_ext/libft.a

all: mario $(NAME)

%.o: %.c
	@$(CC) $(CCFLAGS) -I/libft/libft.h -I/usr/include -O3 -c $< -o $@

$(NAME): $(OBJ)
	@cd libft_ext && make
	@$(CC) $(CCFLAGS) $(OBJ) -Ilibft_ext $(LIBFTA) -o $(NAME)
	@echo "$(YELLOW)        ||>>    $(BLUE)push_swap $(YELLOW)compiled!!    <<||$(RESET)"

clean:
	@$(RM) $(OBJ)
	@cd libft_ext && make clean

fclean:
	@$(RM) $(NAME) $(OBJ)
	@cd libft_ext && make fclean

re: fclean all

